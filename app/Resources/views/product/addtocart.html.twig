{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product add to Cart</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        </tbody>
    </table>

    {{ form_start(addtocart_form) }}
        {{ form_widget(addtocart_form) }}
        <input type="submit" value="Add to Cart" />
    {{ form_end(addtocart_form) }}


            <a href="{{ path('product_index') }}">Back to the list</a>

{% endblock %}
