{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cart</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cart.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cart.email }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ cart.status }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cart_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cart_edit', { 'id': cart.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
